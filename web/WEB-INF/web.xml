<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">

    <!-- =========================
         Configuración de JSF
    ========================== -->
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>

    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>

    <!-- =========================
         Configuración de sesión
    ========================== -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- =========================
         Página de inicio
    ========================== -->
    <welcome-file-list>
        <welcome-file>InterfazInicio.xhtml</welcome-file>
    </welcome-file-list>

    <!-- =========================
         Configuración PrimeFaces
    ========================== -->
    <context-param>
        <param-name>primefaces.THEME</param-name>
        <param-value>bootstrap</param-value>
    </context-param>

    <!-- =========================
         Mapas de MIME para fuentes
    ========================== -->
    <mime-mapping>
        <extension>eot</extension>
        <mime-type>application/vnd.ms-fontobject</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>ttf</extension>
        <mime-type>font/ttf</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>woff</extension>
        <mime-type>font/woff</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>woff2</extension>
        <mime-type>font/woff2</mime-type>
    </mime-mapping>

    <!-- =========================
         Servlet para reporte PDF
    ========================== -->
    <servlet>
        <servlet-name>ReporteNinoPdfServlet</servlet-name>
        <servlet-class>control.ReporteNinoPdfServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ReporteNinoPdfServlet</servlet-name>
        <url-pattern>/ReporteNinoPdfServlet</url-pattern>
    </servlet-mapping>

  
</web-app>
